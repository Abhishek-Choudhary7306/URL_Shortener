<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home Page</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f9f9f9;
      margin: 0;
      padding: 20px;
    }

    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
    }

    header h1 {
      margin: 0;
      color: #2d3436;
    }

    .auth-buttons {
      display: flex;
      gap: 10px;
    }

    .auth-buttons a {
      text-decoration: none;
      padding: 8px 16px;
      border-radius: 6px;
      font-weight: bold;
      transition: background 0.3s;
    }

    .auth-buttons .login {
      background: #0984e3;
      color: white;
    }

    .auth-buttons .login:hover {
      background: #0868b3;
    }

    .auth-buttons .signup {
      background: #00b894;
      color: white;
    }

    .auth-buttons .signup:hover {
      background: #019875;
    }

    form {
      margin: 20px 0;
    }

    input[type="text"] {
      width: 300px;
      padding: 8px;
      border-radius: 6px;
      border: 1px solid #ccc;
      margin-right: 10px;
    }

    button {
      padding: 8px 16px;
      border: none;
      border-radius: 6px;
      background: #6c5ce7;
      color: white;
      cursor: pointer;
      transition: background 0.3s;
    }

    button:hover {
      background: #5946d2;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: center;
    }

    th {
      background: #dfe6e9;
    }
  </style>
</head>
 
<body>
  <header>
  <h1>URL SHORTNER</h1>
  <div class="auth-buttons">
    <a href="/user/logout" class="signup" style="background:#d63031">Logout</a>
  </div>
</header>


  <% if (locals.id) { %>
  <p>
    The Generated URL is:
    <a href="http://localhost:8001/url/<%= id %>" target="_blank">
      http://localhost:8001/url/<%= id %>
    </a>
  </p>
  <% } %>

  <form method="POST" action="/url">
    <label>Enter your URL here</label>
    <input type="text" name="url" placeholder="https://example.com" required>
    <button>Generate</button>
  </form>

  <div>
    <% if (locals.urls) { %>
    <table>
      <thead>
        <tr>
          <th>Sl No.</th>
          <th>Short Id</th>
          <th>Short Link</th>
          <th>Redirect</th>
          <th>Clicks</th>
        </tr>
      </thead>
      <tbody>
        <% urls.forEach((url,index) => { %>
        <tr>
          <td><%= index+1 %></td>
          <td><%= url.shortId %></td>
          <td><a href="/url/<%= url.shortId %>" target="_blank">http://localhost:8001/url/<%= url.shortId %></a></td>
          <td><a href="<%= url.redirectURL %>" target="_blank"><%= url.redirectURL %></a></td>
          <td><%= url.visitHistory.length %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% } %>
  </div>
</body>

</html>
